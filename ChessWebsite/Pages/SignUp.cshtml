@page
@model ChessWebsite.Pages.SignUpModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/css/signup.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/img/logo.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous" />
</head>

<body>
    <form method="post">
        <section>
            <div class="content">
                <h2>Sign Up</h2>

                <input asp-for="Username" placeholder="Username" id="Username" />
                <input asp-for="Email" placeholder="E-Mail" id="UserMail" />
                <input asp-for="Password" placeholder="Password (8 Chars)" type="password" id="UserPassword" />
                <button type="submit" id="btnSignup">Sign Up</button>
                <p><a href="/LogIn">Log In</a> here.</p>
                <p>@Model.ErrorMessage</p>
            </div>
        </section>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
</html>